{
  "title": "lang",
  "rules": [
    {
      "description": "[0] lang1",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "lang1"
          },
          "to": [
            { "set_variable": { "name": "simbol_mode", "value": 1 } }
          ],
          "to_after_key_up": [
            { "set_variable": { "name": "simbol_mode", "value": 0 } }
          ],
          "to_if_alone": [
            { "key_code": "lang1" }
          ],
          "to_if_held_down": [
          ]
        },
        {
          "type": "basic",
          "conditions": [
            { "type": "variable_if", "name": "simbol_mode", "value": 1 }
          ],
          "from": {
            "key_code": "k"
          },
          "to": [
            { "key_code": "close_bracket", "modifiers":["shift"] }
          ]
        },
        {
          "type": "basic",
          "conditions": [
            { "type": "variable_if", "name": "simbol_mode", "value": 1 }
          ],
          "from": {
            "key_code": "j"
          },
          "to": [
            { "key_code": "8", "modifiers":["shift"] }
          ]
        }
      ]
    },
    {
      "description": "[0] lang2",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_shift",
            "modifiers":{"optional":["any"]}
          },
          "to": [
            {"key_code": "left_shift", "lazy": true}
          ],
          "to_if_alone": [
            {"key_code": "lang2"}
          ],
          "to_if_held_down": [
          ]
        }
      ]
    }
  ]
}
