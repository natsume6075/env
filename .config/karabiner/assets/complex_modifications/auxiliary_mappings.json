{
  "title": "auxillary_mappings",
  "rules": [
    {
      "description": "バグバグ[auxilary] arrow だけではなく HL でも仮想デスクトップを左右に移動できるようにするためのマッピング",
      "manipulators": [
        { "type": "basic",
          "from": {
            "key_code": "h",
            "modifiers": {
              "mandatory": ["control","shift","option"],
              "optional": ["command"]
            }
          },
          "to": [
            {  "key_code": "left_arrow",
              "mandatory": ["control","shift","option"]
            }
          ]
        },
        { "type": "basic",
          "from": {
            "key_code": "l",
            "modifiers": {
              "mandatory": ["control","shift","option"],
              "optional": ["command"]
            }
          },
          "to": [
            {  "key_code": "right_arrow",
              "mandatory": ["control","shift","option"]
            }
          ]
        }
      ]
    },
    {
      "description": "[auxilary] C-k で œ を送る",
      "manipulators": [
        { "type": "basic",
          "conditions": [
          ],
          "from": {
            "key_code": "k",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
          "to": [
            {
              "key_code": "q",
              "modifiers": ["option"]
            }
          ]
        }
      ]
    }
  ]
}

