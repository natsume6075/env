{
  "title": "caps_lock で VIM っぽい動きをする",
  "rules": [
    {
      "description": "基本",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers":{"mandatory":["caps_lock"]}
          },
          "to": [
            { "key_code": "caps_lock" }
          ]
        }
      ]
    },
    {
      "description": "hjkl",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "h",
            "modifiers":{"mandatory":["caps_lock"]}
          },
          "to": [
            { "key_code": "left_arrow", "modifiers": "caps_lock" }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "j",
            "modifiers":{"mandatory":["caps_lock"]}
          },
          "to": [
            { "key_code": "down_arrow", "modifiers": "caps_lock" }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "k",
            "modifiers":{"mandatory":["caps_lock"]}
          },
          "to": [
            { "key_code": "up_arrow", "modifiers": "caps_lock" }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "l",
            "modifiers":{"mandatory":["caps_lock"]}
          },
          "to": [
            { "key_code": "right_arrow", "modifiers": "caps_lock" }
          ]
        }
      ]
    }
  ]
}
