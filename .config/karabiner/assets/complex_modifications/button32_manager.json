{
  "title": "Manager = button32 について",
  "rules": [
    {
      "description": "button32 を ctrl+option+command，さらに manager を発火．単体押しで ctrl+shift+com+a，連打で ctrl+shift+com+b，single expose 中は return",
      "manipulators": [
        {
          "type": "basic",
          "conditions": [
            { "type": "frontmost_application_unless", "bundle_identifiers": [ "^com\\.binaryage\\.TotalSpaces2" ] }
          ],
          "from": {
            "pointing_button": "button32",
            "modifiers":{
              "optional" :["any"]
            }
          },
          "to": [
            { "set_variable": { "name": "manager", "value": 1 } },
            { "set_variable": { "name": "repeat_button32", "value": 1 } },
            {
              "key_code": "left_control",
              "modifiers": [
                "option",
                "command"
              ],
              "lazy":"true"
            }
          ],
          "to_after_key_up": [
            { "set_variable": { "name": "manager", "value": 0 } }
          ],
          "to_if_alone": [
            {
              "key_code": "a",
              "modifiers": [
                "left_control",
                "left_shift",
                "left_command"
              ]
            }
          ],
          "to_if_held_down": [
            {
              "key_code": "b",
              "modifiers": [
                "left_control",
                "left_shift",
                "left_command"
              ]
            }
          ]
        },

        {
          "type": "basic",
          "conditions": [
            { "type": "frontmost_application_if", "bundle_identifiers": [ "^com\\.binaryage\\.TotalSpaces2" ] }
          ],
          "from": {
            "pointing_button": "button32"
          },
          "to": [
            {
              "key_code": "return_or_enter"
            }
          ]
        }
      ]
    },



    {
      "description": "c-k で スクリーンを次々変更",
      "manipulators": [
        {
          "type": "basic",
          "conditions": [
            { "type": "variable_if", "name": "current_screen", "value": 0 },
            { "type": "variable_if", "name": "num_of_screen", "value": 0 },
            { "type": "variable_if", "name": "manager", "value": 1 }
          ],
          "from": {
            "key_code": "k",
            "modifiers":{
              "optional" :["any"]
            }
          },
          "to": [
            {
              "key_code": "h",
              "modifiers": [
              ]
            },
            { "set_variable": { "name": "current_screen", "value": 1 } }
          ]
        },
        {
          "type": "basic",
          "conditions": [
            { "type": "variable_if", "name": "current_screen", "value": 1 },
            { "type": "variable_if", "name": "num_of_screen", "value": 0 },
            { "type": "variable_if", "name": "manager", "value": 1 }
          ],
          "from": {
            "key_code": "k",
            "modifiers":{
              "optional" :["any"]
            }
          },
          "to": [
            {
              "key_code": "i",
              "modifiers": [
              ]
            },
            { "set_variable": { "name": "current_screen", "value": 2 } }
          ]
        },
        {
          "type": "basic",
          "conditions": [
            { "type": "variable_if", "name": "current_screen", "value": 2 },
            { "type": "variable_if", "name": "num_of_screen", "value": 0 },
            { "type": "variable_if", "name": "manager", "value": 1 }
          ],
          "from": {
            "key_code": "k",
            "modifiers":{
              "optional" :["any"]
            }
          },
          "to": [
            {
              "key_code": "h",
              "modifiers": [
              ]
            },
            { "set_variable": { "name": "current_screen", "value": 1 } }
          ]
        }



      ]
    }





  ]
}
