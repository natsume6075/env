{
  "title": "VIM っぽい動きをする（iterm2 以外のアプリ）",
  "rules": [
    {
      "description": "[vim-mode] normal <-> insert mode chenge",
      "manipulators": [
        {
          "type": "basic",
          "conditions": [
            { "type": "variable_if", "name": "normal_mode", "value": 0 },
            { "type": "frontmost_application_unless", "bundle_identifiers": [ "^com\\.googlecode\\.iterm2" ] }
          ],
          "from": {
            "key_code": "escape"
          },
          "to": [
            { "set_variable": { "name": "normal_mode", "value": 1 } }
          ]
        },
        {
          "type": "basic",
          "conditions": [
            { "type": "variable_if", "name": "j_key", "value": 1 },
            { "type": "variable_if", "name": "normal_mode", "value": 0 },
            { "type": "frontmost_application_unless", "bundle_identifiers": [ "^com\\.googlecode\\.iterm2" ] }
          ],
          "from": { "key_code": "j" },
          "to": [
            { "key_code": "delete_or_backspace" },
            { "set_variable": { "name": "normal_mode", "value": 1 } }
          ]
        },
        {
          "type": "basic",
          "conditions": [
            { "type": "variable_if", "name": "j_key", "value": 0 },
            { "type": "variable_if", "name": "normal_mode", "value": 0 },
            { "type": "frontmost_application_unless", "bundle_identifiers": [ "^com\\.googlecode\\.iterm2" ] }
          ],
          "from": {
            "key_code": "j",
            "modifiers": { "optional": [ "any" ] }
          },
          "to": [
            { "set_variable": { "name": "j_key", "value": 1 } },
            { "key_code": "j" }
          ],
          "to_delayed_action": {
            "to_if_invoked": [
              { "set_variable": { "name": "j_key", "value": 0 } }
            ],
            "to_if_canceled": [
              { "set_variable": { "name": "j_key", "value": 0 } }
            ]
          }
        },

        {
          "type": "basic",
          "conditions": [
            { "type": "variable_if", "name": "normal_mode", "value": 1 },
            { "type": "frontmost_application_unless", "bundle_identifiers": [ "^com\\.googlecode\\.iterm2" ] }
          ],
          "from": {
            "key_code": "i"
          },
          "to": [
            { "set_variable": { "name": "normal_mode", "value": 0 } }
          ]
        },
        {
          "type": "basic",
          "conditions": [
            { "type": "variable_if", "name": "normal_mode", "value": 1 },
            { "type": "frontmost_application_unless", "bundle_identifiers": [ "^com\\.googlecode\\.iterm2" ] }
          ],
          "from": {
            "key_code": "a"
          },
          "to": [
            { "key_code": "right_arrow" },
            { "set_variable": { "name": "normal_mode", "value": 0 } }
          ]
        },
        {
          "type": "basic",
          "conditions": [
            { "type": "variable_if", "name": "normal_mode", "value": 1 },
            { "type": "frontmost_application_unless", "bundle_identifiers": [ "^com\\.googlecode\\.iterm2" ] }
          ],
          "from": {
            "key_code": "a",
            "modifiers":{"mandatory":["shift"]}
          },
          "to": [
            { "key_code": "right_arrow", "modifiers": ["command"] },
            { "set_variable": { "name": "normal_mode", "value": 0 } }
          ]
        },
        {
          "type": "basic",
          "conditions": [
            { "type": "variable_if", "name": "normal_mode", "value": 1 },
            { "type": "frontmost_application_unless", "bundle_identifiers": [ "^com\\.googlecode\\.iterm2" ] }
          ],
          "from": {
            "key_code": "i",
            "modifiers":{"mandatory":["shift"]}
          },
          "to": [
            { "key_code": "left_arrow", "modifiers": ["command"] },
            { "set_variable": { "name": "normal_mode", "value": 0 } }
          ]
        },
        {
          "type": "basic",
          "conditions": [
            { "type": "variable_if", "name": "normal_mode", "value": 1 },
            { "type": "frontmost_application_unless", "bundle_identifiers": [ "^com\\.googlecode\\.iterm2" ] }
          ],
          "from": {
            "key_code": "o"
          },
          "to": [
            { "key_code": "right_arrow", "modifiers": ["command"] },
            { "key_code": "return_or_enter" },
            { "set_variable": { "name": "normal_mode", "value": 0 } }
          ]
        },
        {
          "type": "basic",
          "conditions": [
            { "type": "variable_if", "name": "normal_mode", "value": 1 },
            { "type": "frontmost_application_unless", "bundle_identifiers": [ "^com\\.googlecode\\.iterm2" ] }
          ],
          "from": {
            "key_code": "o",
            "modifiers":{"mandatory":["shift"]}
          },
          "to": [
            { "key_code": "up_arrow" },
            { "key_code": "right_arrow", "modifiers": ["command"] },
            { "key_code": "return_or_enter" },
            { "set_variable": { "name": "normal_mode", "value": 0 } }
          ]
        }

      ]
    },


