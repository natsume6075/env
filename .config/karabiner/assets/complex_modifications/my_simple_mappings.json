{
  "title": "my_simple_mappings",
  "rules": [
    {
      "description": "{} と [] を入れ替える（英数のみ）",
      "manipulators": [
        { "type": "basic",
          "conditions": [
            {
              "type": "input_source_if",
              "input_sources": [
                {
                  "language": "^en$"
                }
              ]
            }
          ],
          "from": {
            "key_code": "close_bracket"
          },
          "to": [
            {  "key_code": "close_bracket",
              "modifiers": ["shift"]
            }
          ]
        },
        { "type": "basic",
          "conditions": [
            {
              "type": "input_source_if",
              "input_sources": [
                {
                  "language": "^en$"
                }
              ]
            }
          ],
          "from": {
            "key_code": "close_bracket",
            "modifiers": {
              "mandatory": ["shift"]
            }
          },
          "to": [
            {  "key_code": "close_bracket"
            }
          ]
        },
        { "type": "basic",
          "conditions": [
            {
              "type": "input_source_if",
              "input_sources": [
                {
                  "language": "^en$"
                }
              ]
            }
          ],
          "from": {
            "key_code": "backslash"
          },
          "to": [
            {  "key_code": "backslash",
              "modifiers": ["shift"]
            }
          ]
        },
        { "type": "basic",
          "conditions": [
            {
              "type": "input_source_if",
              "input_sources": [
                {
                  "language": "^en$"
                }
              ]
            }
          ],
          "from": {
            "key_code": "backslash",
            "modifiers": {
              "mandatory": ["shift"]
            }
          },
          "to": [
            {  "key_code": "backslash"
            }
          ]
        }
      ]
    },
    {
      "description": "= と - を入れ替える（英数のみ）",
      "manipulators": [
        { "type": "basic",
          "conditions": [
            {
              "type": "input_source_if",
              "input_sources": [
                {
                  "language": "^en$"
                }
              ]
            }
          ],
          "from": {
            "key_code": "hyphen"
          },
          "to": [
            {  "key_code": "hyphen",
              "modifiers": ["shift"]
            }
          ]
        },
        { "type": "basic",
          "conditions": [
            {
              "type": "input_source_if",
              "input_sources": [
                {
                  "language": "^en$"
                }
              ]
            }
          ],
          "from": {
            "key_code": "hyphen",
            "modifiers": {
              "mandatory": ["shift"]
            }
          },
          "to": [
            {  "key_code": "hyphen"
            }
          ]
        }
      ]
    },
    {
      "description": "@->' `->\" '->` \"->@",
      "manipulators": [
        { "type": "basic",
          "from": {
            "key_code": "open_bracket"
          },
          "to": [
            {
              "key_code": "7",
              "modifiers": ["shift"]
            }
          ]
        },
        { "type": "basic",
          "from": {
            "key_code": "open_bracket",
            "modifiers": {
              "mandatory": ["shift"]
            }
          },
          "to": [
            {
              "key_code": "2",
              "modifiers": ["shift"]
            }
          ]
        },
        { "type": "basic",
          "from": {
            "key_code": "7",
            "modifiers": {
              "mandatory": ["shift"]
            }
          },
          "to": [
            {
              "key_code": "open_bracket",
              "modifiers": ["shift"]
            }
          ]
        },
        { "type": "basic",
          "from": {
            "key_code": "2",
            "modifiers": {
              "mandatory": ["shift"]
            }
          },
          "to": [
            {
              "key_code": "open_bracket"
            }
          ]
        }
      ]
    },
    {
      "description": "C-M で Return（衝突注意。vim も日本語をリターンできないから欲しい）",
      "manipulators": [
        { "type": "basic",
          "from": {
            "key_code": "m",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
          "to": [
            {  "key_code": "return_or_enter"
            }
          ]
        }
      ]
    },
    {
      "description": ":->; +:->: ;->+; +;->+:",
      "manipulators": [
        { "type": "basic",
          "from": {
            "key_code": "quote"
          },
          "to": [
            {
              "key_code": "semicolon"
            }
          ]
        },
        { "type": "basic",
          "from": {
            "key_code": "quote",
            "modifiers": {
              "mandatory": ["shift"]
            }
          },
          "to": [
            {
              "key_code": "quote"
            }
          ]
        },
        { "type": "basic",
          "from": {
            "key_code": "semicolon"
          },
          "to": [
            {
              "key_code": "semicolon",
              "modifiers": ["shift"]
            }
          ]
        },
        { "type": "basic",
          "from": {
            "key_code": "semicolon",
            "modifiers": {
              "mandatory": ["shift"]
            }
          },
          "to": [
            {
              "key_code": "quote",
              "modifiers": ["shift"]
            }
          ]
        }
      ]
    }
  ]
}
