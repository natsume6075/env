{
  "title": "functions_lock",
  "rules": [
    {
      "description": "fnモードとsysモードの概念を導入する。fn の単独押しでモード切り替え。sysモード中はF*キーを押すとfnキーが同時押しされる。",
      "manipulators": [
        {
          "type": "basic",
          "conditions":[
            {"type": "variable_if", "name": "is_fn_lock", "value": 0}
          ],
          "from": {
            "key_code": "fn",
            "modifiers":{"optional":["any"]}
          },
          "to": [ 
            {"key_code": "fn", "lazy": true}
          ],
          "to_if_alone": [
            {"key_code": "fn"},
            {"key_code": "1"},
            {"set_variable": {"name": "is_fn_lock", "value": 1}}
          ]
        },
        {
          "type": "basic",
          "conditions":[
            {"type": "variable_if", "name": "is_fn_lock", "value": 1}
          ],
          "from": {
            "key_code": "fn",
            "modifiers":{"optional":["any"]}
          },
          "to": [ 
            {"key_code": "fn", "lazy": true}
          ],
          "to_if_alone": [ 
            {"key_code": "fn"},
            {"key_code": "0"},
            {"set_variable": {"name": "is_fn_lock", "value": 0}}
          ]
        },








        { "type": "basic",
          "conditions":[
            {"type": "variable_if", "name": "is_fn_lock", "value": 0}
          ],
          "from": {
            "key_code": "f11",
            "modifiers":{"optional":["any"]}
          },
          "to": [
            {"key_code": "f11"}
          ]
        },
        { "type": "basic",
          "conditions":[
            {"type": "variable_if", "name": "is_fn_lock", "value": 1}
          ],
          "from": {
            "key_code": "f11",
            "modifiers":{
              "mandatory":["fn"],
              "modifiers":{"optional":["command","control", "shift", "option", "caps_lock"]}
            }
          },
          "to": [
            {"key_code": "f11"}
          ]
        },
        { "type": "basic",
          "conditions":[
            {"type": "variable_if", "name": "is_fn_lock", "value": 1}
          ],
          "from": {
            "key_code": "f11",
            "modifiers":{"optional":["command","control", "shift", "option", "caps_lock"]}
          },
          "to": [
            {"key_code": "f11", "modifiers":"fn"}
          ]
        },

        { "type": "basic",
          "conditions":[
            {"type": "variable_if", "name": "is_fn_lock", "value": 0}
          ],
          "from": {
            "key_code": "f12",
            "modifiers":{"optional":["any"]}
          },
          "to": [
            {"key_code": "f12"}
          ]
        },
        { "type": "basic",
          "conditions":[
            {"type": "variable_if", "name": "is_fn_lock", "value": 1}
          ],
          "from": {
            "key_code": "f12",
            "modifiers":{
              "mandatory":["fn"],
              "modifiers":{"optional":["command","control", "shift", "option", "caps_lock"]}
            }
          },
          "to": [
            {"key_code": "f12"}
          ]
        },
        { "type": "basic",
          "conditions":[
            {"type": "variable_if", "name": "is_fn_lock", "value": 1}
          ],
          "from": {
            "key_code": "f12",
            "modifiers":{"optional":["command","control", "shift", "option", "caps_lock"]}
          },
          "to": [
            {"key_code": "f12", "modifiers":"fn"}
          ]
        }




      ]
    }
  ]
}
