{
  "title": "コントロールキーについて",
  "rules": [
    {
      "description": "コントロールは死んだ。もういない。",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_control",
            "modifiers":{"optional":["any"]}
          },
          "to": [
          ]
        }

      ]
    },
    {
      "description": "コントロールキーを ctrl+shift+command に。単体押しで ctrl+opt+com+a，長押しで ctrl+opt+com+b，single expose 中は return",
      "manipulators": [
        {
          "type": "basic",
          "conditions": [
            { "type": "variable_if", "name": "instant_expose", "value": 0 }
          ],
          "from": {
            "key_code": "left_control",
            "modifiers":{"optional":["command"]}
          },
          "to": [
            {
              "key_code": "left_control",
              "modifiers": [
                "left_shift",
                "option"
              ],
              "lazy":"true"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "a",
              "modifiers": [
                "left_control",
                "option",
                "left_command"
              ],
              "lazy":"true"
            }
          ],
          "to_if_held_down": [
            {
              "key_code": "b",
              "modifiers": [
                "left_control",
                "option",
                "left_command"
              ],
              "lazy":"true"
            },
            { "set_variable": { "name": "instant_expose", "value": 1 } }
          ]
        },

        {
          "type": "basic",
          "conditions": [
            { "type": "variable_if", "name": "instant_expose", "value": 1 }
          ],
          "from": {
            "key_code": "left_control"
          },
          "to": [
            {
              "key_code": "return_or_enter"
            },
            { "set_variable": { "name": "instant_expose", "value": 0 } }
          ]
        }
      ]
    },
    {
      "description": "previous desktop/window/display",
      "manipulators": [
        {
          "type": "basic",
          "conditions": [
            { "type": "variable_if", "name": "current_mode", "value": 2 },
            { "type": "variable_if", "name": "j_key", "value": 1 },
            { "type": "frontmost_application_unless", "bundle_identifiers": [ "^com\\.googlecode\\.iterm2" ] }
          ],
          "from": {
            "key_code": "j",
            "modifiers": { "mandatory": [ "control" ] }
          },
          "to": [
            { "key_code": "delete_or_backspace" },
            { "set_variable": { "name": "current_mode", "value": 1 } },
            { "key_code": "left_arrow", "modifiers": ["shift"] }
          ]
        },
        {
          "type": "basic",
          "conditions": [
            { "type": "variable_if", "name": "current_mode", "value": 2 },
            { "type": "variable_if", "name": "j_key", "value": 0 },
            { "type": "frontmost_application_unless", "bundle_identifiers": [ "^com\\.googlecode\\.iterm2" ] }
          ],
          "from": {
            "key_code": "",
            "modifiers": { "optional": [ "control" ] }
          },
          "to": [
            { "set_variable": { "name": "j_key", "value": 1 } },
            { "key_code": "j" }
          ],
          "to_delayed_action": {
            "to_if_invoked": [
              { "set_variable": { "name": "j_key", "value": 0 } }
            ],
            "to_if_canceled": [
              { "set_variable": { "name": "j_key", "value": 0 } }
            ]
          }
        }

      ]
    }
  ]
}
