{
  "title": "コントロールキーについて",
  "rules": [
    {
      "description": "コントロールは死んだ。もういない。",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_control",
            "modifiers":{"optional":["any"]}
          },
          "to": [
          ]
        }

      ]
    },
    {
      "description": "コントロールキーを ctrl+shift+command に。単体押しで ctrl+opt+com+a，長押しで ctrl+opt+com+b",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_control"
          },
          "to": [
            {
              "key_code": "left_control",
              "modifiers": [
                "left_shift",
                "option"
              ],
              "lazy":"true"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "a",
              "modifiers": [
                "left_control",
                "option",
                "left_command"
              ],
              "lazy":"true"
            }
          ],
          "to_if_held_down": [
            {
              "key_code": "b",
              "modifiers": [
                "left_control",
                "option",
                "left_command"
              ],
              "lazy":"true"
            }
          ]
        }
      ]
    }
  ]
}
